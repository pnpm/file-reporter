{
  "name": "@pnpm/file-reporter",
  "version": "0.1.0",
  "description": "A file reporter for pnpm",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "pretest": "npm run tsc",
    "test": "tslint -c tslint.json --project . && ts-node test",
    "tsc": "rimraf lib && tsc",
    "prepublish": "npm run tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnpm/file-reporter.git"
  },
  "keywords": [
    "pnpm-reporter"
  ],
  "engines": {
    "node": ">=8"
  },
  "author": "Zoltan Kochan <z@kochan.io> (https://www.kochan.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnpm/file-reporter/issues"
  },
  "homepage": "https://github.com/pnpm/file-reporter#readme",
  "dependencies": {
    "@types/graceful-fs": "^4.1.2",
    "@types/node": "^9.4.6",
    "graceful-fs": "^4.1.11",
    "path-exists": "^4.0.0"
  },
  "devDependencies": {
    "@types/tape": "^4.2.28",
    "commitizen": "^3.0.0",
    "exists-file": "^3.0.0",
    "ghooks": "^2.0.0",
    "ndjson": "^1.5.0",
    "rimraf": "^2.5.4",
    "tape": "^4.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.0.0",
    "typescript": "^3.0.0",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/validate-commit-msg/index.js"
    }
  }
}
